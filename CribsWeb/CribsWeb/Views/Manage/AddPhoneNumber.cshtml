@model Cribs.Web.Models.AddPhoneNumberViewModel
@{
    ViewBag.Title = "Phone Number";
}

<div class="row">
    @using (Html.BeginForm("AddPhoneNumber", "Manage", FormMethod.Post, new {role = "form"}))
    {
        @Html.AntiForgeryToken()
        <div class="col m6 s12 offset-m3">
            <div class="row">
                <div class="col s12 m12 l12">
                    <h4>Add a phone number</h4>
                    <hr/>
                    @Html.ValidationSummary("", new {@class = "red-text"})
                </div>
            </div>
            <div class="row">
                <div class="col s12 m12 l12">
                    @Html.LabelFor(m => m.Number)
                    @Html.TextBoxFor(m => m.Number)
                </div>
            </div>
            <div class="row">
                <div class="col s12 m12 l12">
                    <input type="submit" class="btn cyan" value="Submit"/>
                </div>
            </div>
        </div>
    }
</div>
@section Scripts {
    @Scripts.Render("~/bundles/jqueryval")
}