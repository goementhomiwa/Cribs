@model Cribs.Web.ViewModels.CreateCribViewModel
@{
    ViewBag.Title = "Create";
    var integers = new[] { 1, 2,3,4,5,6,7,8,9 }.Select(x => new SelectListItem
    {
        Value = x.ToString(),
        Text = x.ToString()
    });
    var Values = new SelectList(integers, "Value", "Text");
}

@using (Html.BeginForm("Create", "Cribs", FormMethod.Post, new { @class = "form-horizontal", role = "form", enctype = "multipart/form-data"}))
{
    @Html.AntiForgeryToken()
    <h4>Add new rent post.</h4>
    <hr />
    @Html.ValidationSummary("", new { @class = "text-danger" })
    <div class="form-group">
        @Html.LabelFor(m => m.Title, new { @class = "col-md-2 control-label" })
        <div class="col-md-10">
            @Html.TextBoxFor(m => m.Title, new { @class = "form-control" })
        </div>
    </div>
    <div class="form-group">
        @Html.LabelFor(m => m.Description, new { @class = "col-md-2 control-label" })
        <div class="col-md-10">
            @Html.TextAreaFor(m => m.Description, new { @class = "form-control" })
        </div>
    </div>
    <div class="form-group">
        @Html.LabelFor(m => m.MonthlyRent, new { @class = "col-md-2 control-label" })
        <div class="col-md-10">
            @Html.TextBoxFor(m => m.MonthlyRent, new { @class = "form-control" })
        </div>
    </div>
    <div class="form-group">
        @Html.LabelFor(m => m.NumberOfRooms, new { @class = "col-md-2 control-label" })
        <div class="col-md-10">
            @Html.DropDownListFor(m => m.NumberOfRooms, Values, new { @class = "form-control" })
        </div>
    </div>
    <div class="form-group">
        @Html.LabelFor(m => m.AvailableDate, new { @class = "col-md-2 control-label" })
        <div class="col-md-10">
            @Html.TextBoxFor(m => m.AvailableDate, new { @class = "form-control datetimepicker" })
        </div>
    </div>
    <div class="form-group">
        @Html.LabelFor(m => m.Location, new { @class = "col-md-2 control-label" })
        <div class="col-md-10">
            @Html.TextBoxFor(m => m.Location, new { @class = "form-control" })
        </div>
    </div>
    <div class="form-group">
        @Html.LabelFor(m => m.MainImage, new { @class = "col-md-2 control-label" })
        <div class="col-md-10">
            @Html.TextBoxFor(m => m.MainImage, new {type="file", @class = "form-control" })
        </div>
    </div>
    <div class="row">
        <div class="col-md-2">
            @Html.Label("Choose 2 more photos")
        </div>
        <div class="col-md-10">
            @Html.TextBoxFor(m => m.Image1, new { type = "file", @class = "form-control" })
        </div>
    </div>
    <div class="row">
        <div class="col-md-offset-2 col-md-10">
            @Html.TextBoxFor(m => m.Image2, new { type = "file", @class = "form-control" })
        </div>
    </div>
    <br />
    <div class="form-group">
        <div class="col-md-offset-2 col-md-10">
            <input type="submit" class="btn btn-default" value="Register" />
        </div>
    </div>
}

@section scripts{
<script type="text/javascript">
    $(function () {
        $(".datetimepicker").datetimepicker();
    });
</script>
}