@model Cribs.Web.Models.ExternalLoginConfirmationViewModel
@{
    ViewBag.Title = "Register";
}

<div class="row">

    @using (Html.BeginForm("ExternalLoginConfirmation", "Account", new {ViewBag.ReturnUrl}, FormMethod.Post, new {role = "form"}))
    {
        @Html.AntiForgeryToken()
        <div class="col m6 s12 offset-m3">
            <div class="row">
                <div class="col s12 m12 l12">
                    <h4>Association Form</h4>
                    <hr/>
                    <p class="cyan-text">
                        You've successfully authenticated with <strong>@ViewBag.LoginProvider</strong>.
                        Please enter a user name to continue.
                    </p>
                    @Html.ValidationSummary(true, "", new { @class = "red-text" })
                </div>
            </div>
            <div class="row">
                <div class="input-field  col s12 m6 l6">
                    @Html.LabelFor(m => m.Email)
                    @Html.TextBoxFor(m => m.Email, new {type="email"})
                </div>
            </div>
            <div class="row">
                <div class="input-field  col s12 m12 l12">
                    <input type="submit" class="btn btn-default" value="Continue" />
                </div>
            </div>
        </div>    
    }
</div>
@section Scripts {
    @Scripts.Render("~/bundles/jqueryval")
}