@model Cribs.Web.Models.VerifyCodeViewModel
@{
    ViewBag.Title = "Verify";
}

<div class="row">

    @using (Html.BeginForm("VerifyCode", "Account", new {Model.ReturnUrl}, FormMethod.Post, new {@class = "form-horizontal", role = "form"}))
    {
        @Html.AntiForgeryToken()
        <div class="col m6 s12 offset-m3">
            <div class="row">
                <div class="col s12 m12 l12">
                    @Html.Hidden("provider", @Model.Provider)
                    @Html.Hidden("rememberMe", @Model.RememberMe)
                    <h4>Enter verification code</h4>
                    <hr/>
                    @Html.ValidationSummary("", new {@class = "red-text"})
                </div>
            </div>
            <div class="row">
                <div class="col s12 m12 l12">
                    @Html.LabelFor(m => m.Code)
                    @Html.TextBoxFor(m => m.Code)
                </div>
            </div>
            <div class="row">
                <div class="col s12 m12 l12">
                    <input type="checkbox" name="RememberBrowser" id="RememberBrowser" />
                    @Html.LabelFor(m => m.RememberBrowser)
                </div>
            </div>
            <div class="row">
                <div class="col-md-offset-2 col-md-10">
                    <input type="submit" class="btn cyan" value="Submit"/>
                </div>
            </div>
        </div>
    }
</div>
@section Scripts {
    @Scripts.Render("~/bundles/jqueryval")
}