@model Cribs.Web.Models.RegisterViewModel
@{
    ViewBag.Title = "Register";
}

<div class="row">
    @using (Html.BeginForm("Register", "Account", FormMethod.Post, new {role = "form"}))
    {
        @Html.AntiForgeryToken()
        <div class="col m6 s12 offset-m3">

            <div class="row">
                <div class="col s12 m12 l12">
                    <h4>Create a new account.</h4>
                    <hr/>
                    @Html.ValidationSummary(true, "", new {@class = "red-text"})
                </div>
            </div>
            <div class="row">
                <div class="input-field  col s12 m6 l6">
                    <label for="PreferredName">Display Name</label>
                    <input type="text" id="PreferredName" name="PreferredName"/>
                </div>
           
                <div class="input-field  col s12 m16 l6">
                    <label for="PhoneNumber">Phone number</label>
                    <input type="text" id="PhoneNumber" name="PhoneNumber"/>
                </div>
            </div>
            <div class="row">
                <div class="input-field  col s12 m12 l12">
                    @Html.LabelFor(m => m.Email)
                    @Html.TextBoxFor(m => m.Email, new {type = "email"})
                    @Html.ValidationMessageFor(m => m.Email, "", new {@class = "red-text"})
                </div>
            </div>
            <div class="row">
                <div class="input-field  col s12 m6 l6">
                    @Html.LabelFor(m => m.Password)
                    @Html.PasswordFor(m => m.Password)
                    @Html.ValidationMessageFor(m => m.Password, "", new {@class = "red-text"})
                </div>
           
                <div class="input-field  col s12 m6 l6">
                    @Html.LabelFor(m => m.ConfirmPassword)
                    @Html.PasswordFor(m => m.ConfirmPassword)
                    @Html.ValidationMessageFor(m => m.ConfirmPassword, "", new {@class = "red-text"})
                </div>
            </div>
            <div class="row">
                <div class="input-field  col s12 m12 l12">
                    <input type="submit" class="btn cyan" value="Register" />
                </div>
            </div>
        </div>
    }
</div>
@section Scripts {
    @Scripts.Render("~/bundles/jqueryval")
}