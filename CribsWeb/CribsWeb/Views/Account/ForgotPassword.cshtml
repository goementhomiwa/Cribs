@model Cribs.Web.Models.ForgotPasswordViewModel
@{
    ViewBag.Title = "Forgot your password?";
}

<div class="row">
    @using (Html.BeginForm("ForgotPassword", "Account", FormMethod.Post, new {role = "form"}))
    {
        @Html.AntiForgeryToken()
        <div class="col m6 s12 offset-m3">
            <div class="row">
                <div class="col s12 m12 l12">
                    <h4>Enter your email.</h4>
                    <hr/>
                    @Html.ValidationSummary(true, "", new {@class = "red-text"})
                </div>

            </div>
            <div class="row">
                <div class="input-field  col s12 m6 l6">
                    @Html.LabelFor(m => m.Email)
                    @Html.TextBoxFor(m => m.Email, new {type = "email"})
                </div>
            </div>
            <div class="row">
                <div class="input-field  col s12 m12 l12">
                    <input type="submit" class="btn cyan" value="Email Link"/>
                </div>
            </div>
        </div>
    }
</div>
@section Scripts {
    @Scripts.Render("~/bundles/jqueryval")
}